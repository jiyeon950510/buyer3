<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.buyer3.model.ProductRepository">
    <select id="findAll" resultType="shop.mtcoding.buyer3.model.Product">
        select * from product_tb
    </select>
    <select id="findById" resultType="shop.mtcoding.buyer3.model.Product">
        select * from product_tb where id = #{id}
    </select>
</mapper>